{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "build",
    "sourceMap": true,
    "noEmitOnError": false,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "newLine": "lf",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
  },
  "include": [
    "*.ts",
    "src/**/*"
  ],
}
